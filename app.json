{
  "expo": {
    "name": "BrailleWalk",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "braillewalk",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0047AB"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.braillewalk.app",
      "infoPlist": {
        "NSCameraUsageDescription": "BrailleWalk needs camera access to identify objects, read text, and assist with navigation.",
        "NSMicrophoneUsageDescription": "BrailleWalk needs microphone access for voice commands and authentication.",
        "NSLocationWhenInUseUsageDescription": "BrailleWalk needs your location to provide navigation assistance and share GPS coordinates with caregivers in emergencies.",
        "NSSpeechRecognitionUsageDescription": "BrailleWalk uses speech recognition for voice commands and accessibility features."
      },
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0047AB"
      },
      "package": "com.braillewalk.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WAKE_LOCK",
        "android.permission.VIBRATE",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "BrailleWalk uses the camera to provide real-time assistance for visually impaired users."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "BrailleWalk uses location services to provide navigation assistance and emergency location sharing with caregivers."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#0047AB",
          "defaultChannel": "default"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "BrailleWalk uses the microphone for voice commands and authentication features."
        }
      ],
      "expo-speech-recognition"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "6bc46fc7-5d4d-46a2-926a-1ced2da32b41"
      }
    },
    "owner": "braillewalk"
  }
}
